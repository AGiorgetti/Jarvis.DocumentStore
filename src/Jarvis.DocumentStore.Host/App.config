<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="rebus" type="Rebus.Configuration.RebusConfigurationSection, Rebus" />
  </configSections>
  <connectionStrings>
    <add name="filestore" connectionString="mongodb://localhost/jarvis-documentstore" />
    <add name="system" connectionString="mongodb://localhost/jarvis-documentstore" />
    <add name="log" connectionString="mongodb://localhost/jarvis-documentstore" />
    <add name="events" connectionString="mongodb://localhost/jarvis-documentstore" />
    <add name="readmodel" connectionString="mongodb://localhost/jarvis-documentstore" />
  </connectionStrings>
  <rebus inputQueue="documentstore.input" errorQueue="documentstore.health" workers="1" maxRetries="1">
    <endpoints>
      <add messages="Jarvis.DocumentStore.Core" endpoint="documentstore.input" />
    </endpoints>
  </rebus>
  <appSettings>
    <add key="endPoint" value="http://localhost:5123" />

    <add key="roles" value="api,worker,projections" />
    
    <add key="polling-interval-ms" value="1000" />

    <!-- Indica quanti giorni devono passare prima che uno stream sia eliminato -->
    <add key="days-before-cleanup" value="15" />

    <!-- Indica se fare la rebuild all'avvio -->
    <add key="rebuild" value="false" />
    <add key="engine-slots" value="*" />

    <add key="memory-collect-seconds" value="0" />
    <add key="engine-multithread" value="true" />
    <add key="nitro-mode" value="true" />

    <!-- snapshots -->
    <add key="snaphots-interval" value="60" />
    <add key="snaphots-threshold" value="10" />
    <add key="snaphots-drop" value="true" />

    <add key="depends-on-services" value="elasticsearch-service-x64, MongoDB" />
  </appSettings>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Owin" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.0.0.0" newVersion="3.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Topshelf" publicKeyToken="b800c4cfcdeea87b" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.1.122.0" newVersion="3.1.122.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="MongoDB.Bson" publicKeyToken="f686731cfb9cc103" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-1.9.2.235" newVersion="1.9.2.235" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Quartz" publicKeyToken="f6b8c98a402cc8a4" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-2.2.4.400" newVersion="2.2.4.400" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="MongoDB.Driver" publicKeyToken="f686731cfb9cc103" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-1.9.2.235" newVersion="1.9.2.235" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Castle.Windsor" publicKeyToken="407dd0808d44fbdc" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.3.0.0" newVersion="3.3.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Castle.Core" publicKeyToken="407dd0808d44fbdc" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.3.0.0" newVersion="3.3.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>